source __common
get_logs() {
  local my_context
  local my_namespace
  my_context=$(current_context)
  my_namespace=$(current_namespace)

  pod=$1

  PS3="Please select a container:"
  containers=($(/bin/sh -c "kubectl get pod --context=\"${my_context}\" --namespace=\"${my_namespace}\" $pod -o jsonpath='{.spec.containers[*].name}'"))

  # if there is only one container, set it as selected container
  if [[ ${#containers[@]} -eq 1 ]] ; then
    selected_container=$containers
  else
    # if there are more than one container, prompt select
    select container in "${containers[@]}"
    do
      selected_container=$container
      break
    done
  fi

  echo -e "\nGetting you logs of $selected_container...\n"
  # get logs of the slected pod
  kubectl logs --context=${my_context} --namespace=${my_namespace} $pod -c $selected_container 
  exit 0
  
}

# sohw help
show_help() {
  echo -e $__title
  echo
  echo -e "- Get logs of a selected container: ${__style_underlined}klogs [pod_name]${__style_end}\n"
}

# parse arguments
while [ "$1" != "" ]; do
  case $1 in
    -n | --namespace ) shift
      get_logs "$1"
      ;;
    -h | --help ) shift
      show_help
      exit 0
      ;;
    * ) get_logs "$1"
  esac
  shift
done

# show help if no arguments
if [ $# -eq 0 ]; then show_help; fi
